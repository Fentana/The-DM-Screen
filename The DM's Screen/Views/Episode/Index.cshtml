@model TheDmScreen.Models.Campaign

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<link rel="stylesheet" href="../../Scripts/Foundation/css/foundation.css">
<script src="../../Scripts/Foundation/js/foundation.min.js"></script>
<script src="../../Scripts/Foundation/js/foundation/foundation.reveal.js"></script>

@{ var numberOfEntries = 0;}

<body class="large-10 columns large-centered">
<div class="row large-centered">
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <hr/>
</div>

<div class="row">
    <div class="large-text-center large-9 columns">
        <h3>Episodes</h3>
    </div>
    <div class="large-text-center large-2 large-offset-1 columns">
        <h3>Dossier</h3>
    </div>
    <div class="panel large-9 columns">
        @foreach (var episode in Model.Episodes.OrderBy(p => p.Order))
        {
            if (numberOfEntries++ > 0)
            {
                <hr/>
            }
            <div class="row episodeSelect" id="@episode.EpisodeId">
                <div class="large-centered large-10 columns">
                    <div class="row">
                        <h4>@episode.Name</h4>
                    </div>
                    <div class="row">
                        <div>@episode.Description</div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="large-2 large-offset-1 columns hide-for-small">
        @foreach (var character in Model.Characters)
        {
            <div class="row large-text-center">
                <div class="large-centered large-10 columns">
                    <div class="row">
                        @character.Name
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<footer class="row">
    <div class="large-12 columns">
        <hr/>
        <div class="row">
            <div class="large-5 columns">
                <p>© Copyright Evan Kirsch 2015</p>
            </div>
            <div class="large-7 columns">
                <ul class="inline-list right">
                    <li><a href="#">Relevant Page here</a></li>
                </ul>
            </div>
        </div>
    </div>
</footer>
</body>

<script>
    $(document).ready(function () {
        $(".episodeSelect").click(function () {
            var url = '@Url.Action("Index", "Encounter", new { episodeId = "__id__" })';
            window.location.href = url.replace('__id__', $(this).attr("id"));
        });
    });
</script>
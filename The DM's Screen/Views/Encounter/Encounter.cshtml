@model TheDmScreen.Models.Encounter
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<link rel="stylesheet" href="../../Scripts/Foundation/css/foundation.css">
<script src="../../Scripts/Foundation/js/foundation.min.js"></script>
<script src="../../Scripts/Foundation/js/foundation/foundation.reveal.js"></script>

<script type="text/javascript">
    $(document).foundation();

    function auto_grow(element) {
        element.style.height = "5px";
        element.style.height = (element.scrollHeight) + "px";
    }
</script>

<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

@{
    ViewBag.Title = "Encounter Feed <mockup>";
}

<body class="large-11 columns large-centered">
    <div class="row large-centered">
        <div class="large-12 columns">
            <div>
                <h1>@Model.EncounterId Encounter Feed &lt;Mockup&gt;</h1><br/>
            </div>
        </div>
    </div>

    <div class="reveal-modal" id="myModal" data-reveal>
        <div id="editEntryModal" class="large-8 columns">
            <h3>Apologies!</h3>
            This functionality is not implemented yet, but it is coming soon!
        </div>
        <a class="close-reveal-modal" aria-label="Close">&#215;</a>
    </div>

<div class="large-centered">
@if (!Model.BattleMapImage.IsEmpty())
    {
        <div class="large-2 columns">
            @Html.Partial("~/Views/Partials/SidebarTurnOrder.cshtml", @Model)
        </div>

        <div class="large-6 columns">
            @if (true)
            {
                @Html.Partial("~/Views/Partials/DmDrawer.cshtml", @Model)
            }
            @Html.Partial("~/Views/Partials/EncounterFeed.cshtml", @Model)
        </div>

        <aside class="large-4 columns hide-for-small">
            @Html.Partial("~/Views/Partials/LocalMap.cshtml", @Model)
        </aside>
    }
    else
    {
        <div class="large-3 columns">
            @Html.Partial("~/Views/Partials/SidebarTurnOrder.cshtml", @Model)
        </div>

        <div class="large-9 columns">
            @if (true)
            {
                @Html.Partial("~/Views/Partials/DmDrawer.cshtml", @Model)
            }
            @Html.Partial("~/Views/Partials/EncounterFeed.cshtml", @Model)
        </div>
    }
    </div>

    <input type="hidden" id="encounterId" value="@Model.EncounterId"/>
    <input type="hidden" id="characterId" value="@Model.Initiatives.OrderByDescending(p=>p.TurnOrder).First().Character.CharacterId" />
    <footer class="row">
        <div class="large-12 columns">
            <hr/>
            <div class="row">
                <div class="large-5 columns">
                    <p>© Copyright Evan Kirsch 2015</p>
                </div>
                <div class="large-7 columns">
                    <ul class="inline-list right">
                        <li><a href="#">Relevant Page here</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
</body>